import android.content.Intent;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class Logar extends AppCompatActivity {

    EditText edtemail, edtsenha;
    Button btentrar, btrecuperar;
    TextView txtcadastro, txtfacebook;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.tela_login);

        edtemail = (EditText)findViewById(R.id.edtemail);
        edtsenha = (EditText)findViewById(R.id.edtsenha);
        btentrar = (Button)findViewById(R.id.btentrar);
        btrecuperar = (Button)findViewById(R.id.btrecuperar);
        txtcadastro = (TextView)findViewById(R.id.txtcadastro);
        txtfacebook =(TextView)findViewById(R.id.txtfacebook); 

        txtcadastro.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Intent abreCadastro = new Intent(Logar.this, Cadastro.class);
                startActivity(abreCadastro);

            }
        });
    }
}
